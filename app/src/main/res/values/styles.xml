<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="MainIndexButtonStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_margin">1dp</item>
        <item name="android:background">@color/floralwhite</item>
        <item name="android:typeface">monospace</item>
        <item name="android:textColor">@color/indianred</item>
        <item name="android:textSize">28sp</item>
    </style>

    <style name="NavigationText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">2dp</item>
        <item name="android:padding">20dp</item>
        <item name="android:textSize">24sp</item>
        <item name="android:background">@color/ivory</item>
        <item name="android:typeface">monospace</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:maxLines">2</item>
        <item name="android:ellipsize">marquee</item>
    </style>
</resources>
